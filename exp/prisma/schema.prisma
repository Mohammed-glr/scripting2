generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int     @id @default(autoincrement())
  username  String  @unique
  password  String
  tokens    Token[]
  createdAt DateTime @default(now())
}

model Token {
  id        Int     @id @default(autoincrement())
  value     String  @unique
  userId    Int
  user      User    @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
